<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <org.mapsforge.map.android.view.MapView
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <com.github.clans.fab.FloatingActionMenu
        android:id="@+id/FabMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:menu_labels_position="left"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:menu_colorNormal="@color/colorPrimaryDark"
        app:menu_colorPressed="@color/colorPrimaryDark"
        app:menu_colorRipple="@android:color/transparent">

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/FabLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="@string/Login"
            android:src="@drawable/ic_person"
            app:fab_colorNormal="@color/colorPrimaryDark"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@android:color/transparent" />

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/FabDirection"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:fab_label="@string/direction"
            android:src="@drawable/ic_directions"
            app:fab_colorNormal="@color/colorPrimaryDark"
            app:fab_colorPressed="@color/colorPrimaryDark"
            app:fab_colorRipple="@android:color/transparent" />
    </com.github.clans.fab.FloatingActionMenu>

    <FrameLayout
        android:id="@+id/Container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>

